<%# Titulo da página separado por uma 'linha' -%>
<h1 class="titulo-pagina">Abrir caixa</h1>
<hr size="10" width="100%">


<%= form_for(@caixa) do |f| %>
  <% if @caixa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@caixa.errors.count, "error") %> prohibited this caixa from being saved:</h2>

      <ul>
      <% @caixa.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field form-horizontal">
    <%= f.label :data, class: "sr-only" %><br>
    <div class="input-group col-md-12">
      <%# f.date_field("user", "born_on") %> 
    </div>
  </div>

  <div class="field form-horizontal form-group">
    <%= f.label :valor_inicial, class: "sr-only" %><br>
    <div class="input-group col-md-12">
      <div class="input-group-addon">Valor inicial</div>
        <%= f.text_field :valor_inicial, class: "form-control col-sm-12", id: "exampleInputAmount" %>
      <div class="input-group-addon">R$</div>
    </div>
  </div>
  <div class="field form-horizontal form-group">
    <fieldset disabled>
      <%= f.label :soma_geral, class: "sr-only" %><br>
      <div class="input-group col-md-12">
        <div class="input-group-addon">Soma geral</div>
          <%= f.text_field :soma_geral, class: "form-control col-sm-12", id: "disabledTextInput"  %>
        <div class="input-group-addon">R$</div>
      </div>
    </fieldset>
  </div>
  <div class="actions">
    <%= f.submit  "Salvar", class: "btn btn-primary btn-lg "%>
  </div>
<% end %>
