<%# Cabeçalho da página (NAVBAR) -%>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= image_tag "LOGO3.png", size: "130x60" %>
      <span class="paginador"><a href="http://localhost:3000" class="paginador"> INICIO </a> > </span>
      <span class="paginador ativo">FUNCIONÁRIO</span>
    </div>
  </div>
</nav>

<%# Titulo da página separado por uma 'linha' -%>
<h1 class="titulo-pagina">Funcionários</h1>
<hr size="10" width="100%">

<div class="col-md-10 col-md-offset-1">
  <div class="well">
    <%= link_to "Inserir novo", new_funcionario_path, remote: true, class: "btn buttonCadastros btn-lg" %>
    <%= search_form_for @q, :url => {:action => "index"},:html => { :class => "form-inline form-group consultar" } do |f| %>
      <%= f.search_field :nome_cont, class: "form-control col-sm-12", placeholder: "Buscar..." %>
      <button type="submit" class="btn buttonCadastros">Ir!</button>
      <% end %>
  </div>
  <div class="new-funcionario"></div>
 
  <table id class="table responstable">
    <thead>
    <tr>
      <th data-th="Driver details"><span>Nome</span></th>
      <th>Cargo</th>
      <th>Salario</th>
      <th>Comissão</th>
      <th>Endereço</th>
      <th>CEP</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th></th>
    </tr>
    </thead>
    <tbody id="funcionarios">
    <%= render @funcionarios %>
    </tbody>
  </table>
 
  <%= render 'dialog' %>
</div>
 

