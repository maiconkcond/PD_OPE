<table class="table table-striped table-hover">
  <thead class="cabecalho-tabela">
    <tr class="row-fluid">
      <th class="tit-cab">Nome</th>
      <th class="tit-cab">Telefone</th>
      <th class="tit-cab">Telefone Alternativo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @fabricantes.each do |fabricante| %>
      <tr>
        <td><%= fabricante.nome %></td>
        <td><%= fabricante.tel1 %></td>
        <td><%= fabricante.tel2 %></td>
        <td><%= link_to image_tag('view.png'), fabricante %></td>
        <td><%= link_to image_tag('editar.png'), edit_fabricante_path(fabricante) %></td>
        <td><%= link_to image_tag('excluir.png'), fabricante, method: :delete, data: { confirm: 'Confirmar' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

